{
  "name": "@gephi/gephi-lite-root",
  "homepage": "https://github.com/gephi/gephi-lite",
  "license": "gpl-3.0",
  "bugs": "http://github.com/jacomyal/sigma.js/issues",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "npm exec --workspaces -- npx rimraf node_modules && npx rimraf node_modules",
    "start": "npm run start --workspace=@gephi/gephi-lite",
    "test": "npm run test --workspaces --if-present",
    "build": "preconstruct build",
    "postinstall": "preconstruct dev",
    "postpublish": "preconstruct dev"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@preconstruct/cli": "^2.8.10",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.1",
    "typescript": "~5.6.3"
  },
  "preconstruct": {
    "packages": [
      "packages/sdk",
      "packages/broadcast-client"
    ],
    "exports": {
      "importConditionDefaultExport": "default"
    }
  }
}
